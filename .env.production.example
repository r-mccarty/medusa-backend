# Medusa Backend Production Environment Variables
# Copy this file to .env and update with your production values

###############################################################################
# DATABASE CONFIGURATION
###############################################################################

# PostgreSQL Database URL
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://medusa:medusa_password_change_me@localhost:5432/medusa

# Database connection pool settings (optional)
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

###############################################################################
# REDIS CONFIGURATION
###############################################################################

# Redis connection URL for caching, sessions, and job queue
# Format: redis://[host]:[port]
REDIS_URL=redis://localhost:6379

###############################################################################
# APPLICATION SETTINGS
###############################################################################

# Node environment
NODE_ENV=production

# Backend server port
PORT=9000

# JWT Secret for authentication (CHANGE THIS!)
# Generate with: openssl rand -base64 32
JWT_SECRET=change_me_to_a_random_secure_string_min_32_chars

# Cookie Secret for session management (CHANGE THIS!)
# Generate with: openssl rand -base64 32
COOKIE_SECRET=change_me_to_another_random_secure_string

###############################################################################
# CORS CONFIGURATION
###############################################################################

# Admin CORS - URLs that can access the admin API
# Comma-separated list
ADMIN_CORS=http://localhost:9000,https://yourdomain.com

# Store CORS - URLs that can access the store API (Your Cloud Run storefront)
# Comma-separated list
STORE_CORS=https://your-storefront.run.app,http://localhost:8000

# Auth CORS - URLs that can access authentication endpoints
AUTH_CORS=http://localhost:9000,https://yourdomain.com,https://your-storefront.run.app

###############################################################################
# WORKER CONFIGURATION
###############################################################################

# Set to 'true' for the worker process (managed by PM2)
IS_WORKER=false

###############################################################################
# MEDUSA ADMIN
###############################################################################

# Admin panel path (default: /app)
ADMIN_PATH=/app

###############################################################################
# PAYMENT PROVIDERS (Optional)
###############################################################################

# Stripe
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
# PAYPAL_CLIENT_ID=
# PAYPAL_CLIENT_SECRET=
# PAYPAL_MODE=sandbox

###############################################################################
# FILE STORAGE (Optional)
###############################################################################

# Local file storage (default)
# STORAGE_TYPE=local

# Google Cloud Storage
# STORAGE_TYPE=gcs
# GCS_BUCKET_NAME=your-bucket-name
# GCS_PROJECT_ID=your-gcp-project-id
# GCS_CREDENTIALS_PATH=/path/to/service-account-key.json

# AWS S3
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=

###############################################################################
# EMAIL PROVIDERS (Optional)
###############################################################################

# SendGrid
# SENDGRID_API_KEY=
# SENDGRID_FROM=noreply@yourdomain.com

# Mailgun
# MAILGUN_API_KEY=
# MAILGUN_DOMAIN=
# MAILGUN_FROM=noreply@yourdomain.com

# SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@yourdomain.com

###############################################################################
# SEARCH PROVIDERS (Optional)
###############################################################################

# Algolia
# ALGOLIA_APP_ID=
# ALGOLIA_ADMIN_API_KEY=
# ALGOLIA_INDEX_NAME=products

# Meilisearch
# MEILISEARCH_HOST=http://localhost:7700
# MEILISEARCH_API_KEY=

###############################################################################
# ANALYTICS & MONITORING (Optional)
###############################################################################

# Segment
# SEGMENT_WRITE_KEY=

# Google Analytics
# GA_TRACKING_ID=

###############################################################################
# CUSTOM CONFIGURATION
###############################################################################

# Your custom environment variables
# CUSTOM_VAR=value
